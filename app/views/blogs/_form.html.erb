<div class="container">
  <h2>Add A Blog Post</h2><hr>
    <%= bootstrap_form_for [@blog] do |f| %>
      <div class="field form-group">
        <%= f.text_field :title, label: "Title" %>
      </div>
      <div class="field form-group">
        <%= f.text_field :date, label: "Date" %>
      </div>
      <div class="field form-group">
        <%= f.text_field :distance, label: "Distance"%>
      </div>
      <div class="field form-group">
        <%= f.text_field :time, label: "Time" %>
      </div>
      <div class="field form-group">
        <%= f.text_field :totaldistance, label: "Total Distance"%>
      </div>
      <div class="field form-group">
        <%= f.file_field :mapimage, label: 'Map Image'%>
      </div>
      <div class="actions form-group">
        <%= f.submit "Post Header", class:"btn btn-primary" %>
      </div>
    <% end %>
</div>
