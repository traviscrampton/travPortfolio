<div class="zealandBanner">
  <nav class="navbar navbar-transparent">
    <div class="container-fluid">
      <div class="navbar-header">
        <a class="navbar-brand glyphicon glyphicon-chevron-left " href="/"></a>
      </div>
    </div>
  </nav>
    <div class="col-md-6 olzealand">
      <h1>Ol' Zealand</h1>
    </div>
    <div class="col-md-3">
    </div>
    <div class="col-md-3 efficient">
      <p>A Tour Of New Zealand's West Coast Via Man's Most Efficient Machine</p>
    </div>
</div>

<div class="container topspace">
  <br><br><br>
    <div class="bottomspace">
    <div class="col-md-12 title">
      <% if current_user %>
          <h3><%= @blog.title %> <%= link_to "Edit Blog Header", edit_blog_path(@blog), class:"btn btn-default" %>
            <%= link_to "Delete", blog_path(@blog), class:"btn btn-default",
              :data => {:confirm => "Ya sure mate?",
                        :method => "delete"} %></h3>
      <% else %>
          <h3> <%= @blog.title %> </h3>
      <% end %>
          <div class="downandDistance">
            <legend><p>Distance: <%= @blog.distance %> || Time: <%= @blog.time %> || <%= @blog.date %></p></legend>
          </div>
            <br><br>
        </div>
        <div class="col-md-2 mapspace">
          <% if @blog.mapimage.url(:medium) == "/images/medium/missing.png" %>
          <% else %>
            <%= image_tag @blog.mapimage.url(:medium), class: "mapimage"%>
          <% end %>
        </div>
        <div class="col-md-8">  <br><br>
          <div class="tdspace">
            <% if @blog.descriptions.any? %>
              <% @blog.descriptions.each do |description| %>
                <% if current_user %>
                  <p><%= description.content %> <%= link_to "edit content", edit_blog_description_path(@blog, description), class: "btn btn-default" %>
                    <%= link_to "Delete", blog_description_path(@blog, description), class:"btn btn-default",
                             :data => {:confirm => "Ya sure mate?",
                                       :method => "delete"} %> </p>
                <% else %>
                  <p> <%= description.content %>  </p>
                <% end %>
                  <div class="pics">
                    <% if description.pic.url(:standard) == "/images/standard/missing.png" %>
                    <% else %>
                      <br><br>
                      <%= image_tag description.pic.url(:standard), class: "pic"%>
                    <% end %>
                    <br><br>
                  </div>
              <% end %>
            <% end %>
          </div>
        </div>
      </div>
</div>
