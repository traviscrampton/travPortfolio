<div class="zealandBanner">
  <nav class="navbar navbar-transparent">
    <div class="container-fluid">
      <!-- Brand and toggle get grouped for better mobile display -->
      <div class="navbar-header">
        <a class="navbar-brand glyphicon glyphicon-chevron-left " href="/"></a>
      </div>
    </div><!-- /.container-fluid -->
  </nav>
  <div class="col-md-6 olzealand">
    <h1>Ol' Zealand</h1>
  </div>
  <div class="col-md-3">
  </div>
  <div class="col-md-3 efficient">
    <p>A Tour Of New Zealand's West Coast Via Man's Most Efficient Machine</p>
  </div>
</div>
<div class="container topspace jumbotron">
  <% @blogs.each do |blog| %>

    <div class="col-md-12 title">
        <h3><%= blog.title %></h3>
        <legend><p> <%= blog.date %> </p></legend>
    </div>
    <div class="col-md-10">
        <%= image_tag blog.mapimage.url(:medium), class: "mapimage"%>\
      <%= blog.distance %>
      <%= blog.time %>
    </div>
  <% end %>
</div>
  <% if current_user %>
    <%= link_to "New Post", new_blog_path, class: "btn btn-primary" %>
  <% end %>
